//Method-5

// Java program to demonstrate conversion from 
// String to StringBuffer and reverse of string

class Reverse_String1
{
	public static void main(String[]args)
	{
		String str="sohit";
		StringBuffer sb=new StringBuffer(str);
		sb.reverse();
		System.out.print(sb);
	}
}

	

